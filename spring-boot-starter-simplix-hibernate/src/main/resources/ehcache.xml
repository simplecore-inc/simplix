<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.ehcache.org/v3"
        xsi:schemaLocation="
            http://www.ehcache.org/v3
            http://www.ehcache.org/schema/ehcache-core-3.10.xsd">

    <!-- Default cache template -->
    <cache-template name="default">
        <expiry>
            <ttl unit="seconds">3600</ttl>
        </expiry>
        <resources>
            <heap unit="entries">1000</heap>
            <offheap unit="MB">10</offheap>
        </resources>
    </cache-template>

    <!-- Small cache template -->
    <cache-template name="small">
        <expiry>
            <ttl unit="seconds">1800</ttl>
        </expiry>
        <resources>
            <heap unit="entries">500</heap>
            <offheap unit="MB">5</offheap>
        </resources>
    </cache-template>

    <!-- Large cache template -->
    <cache-template name="large">
        <expiry>
            <ttl unit="seconds">7200</ttl>
        </expiry>
        <resources>
            <heap unit="entries">5000</heap>
            <offheap unit="MB">50</offheap>
        </resources>
    </cache-template>

    <!-- Query cache template -->
    <cache-template name="query">
        <expiry>
            <ttl unit="seconds">900</ttl>
        </expiry>
        <resources>
            <heap unit="entries">500</heap>
            <offheap unit="MB">5</offheap>
        </resources>
    </cache-template>

    <!-- Default query results region -->
    <cache alias="default-query-results-region" uses-template="query"/>

    <!-- Update timestamps cache -->
    <cache alias="default-update-timestamps-region">
        <expiry>
            <none/> <!-- Never expire timestamps -->
        </expiry>
        <resources>
            <heap unit="entries">10000</heap>
        </resources>
    </cache>

    <!-- Default entity cache region -->
    <cache alias="default-entity-region" uses-template="default"/>

    <!-- Default collection cache region -->
    <cache alias="default-collection-region" uses-template="default"/>

</config>