{
  "groups": [
    {
      "name": "simplix.cache",
      "type": "dev.simplecore.simplix.cache.config.CacheProperties",
      "description": "SimpliX Cache Module configuration properties"
    },
    {
      "name": "simplix.cache.cache-configs",
      "type": "java.util.Map",
      "description": "Per-cache configuration settings"
    }
  ],
  "properties": [
    {
      "name": "simplix.cache.mode",
      "type": "java.lang.String",
      "description": "Cache implementation strategy to use",
      "defaultValue": "local",
      "deprecation": null,
      "deprecated": false
    },
    {
      "name": "simplix.cache.default-ttl-seconds",
      "type": "java.lang.Long",
      "description": "Default time-to-live for cache entries in seconds",
      "defaultValue": 3600,
      "deprecation": null,
      "deprecated": false
    },
    {
      "name": "simplix.cache.max-size",
      "type": "java.lang.Long",
      "description": "Maximum number of entries in local cache (Caffeine only)",
      "defaultValue": 10000,
      "deprecation": null,
      "deprecated": false
    },
    {
      "name": "simplix.cache.cache-null-values",
      "type": "java.lang.Boolean",
      "description": "Whether to cache null values to prevent cache penetration",
      "defaultValue": false,
      "deprecation": null,
      "deprecated": false
    },
    {
      "name": "simplix.cache.metrics.enabled",
      "type": "java.lang.Boolean",
      "description": "Enable collection and reporting of cache metrics",
      "defaultValue": true,
      "deprecation": null,
      "deprecated": false
    },
    {
      "name": "simplix.cache.metrics.collection-interval-seconds",
      "type": "java.lang.Long",
      "description": "Interval between cache metrics collection in seconds",
      "defaultValue": 60,
      "deprecation": null,
      "deprecated": false
    },
    {
      "name": "simplix.cache.redis.key-prefix",
      "type": "java.lang.String",
      "description": "Prefix to add to all Redis cache keys",
      "defaultValue": "cache:",
      "deprecation": null,
      "deprecated": false
    },
    {
      "name": "simplix.cache.redis.use-key-prefix",
      "type": "java.lang.Boolean",
      "description": "Whether to use key prefix in Redis",
      "defaultValue": true,
      "deprecation": null,
      "deprecated": false
    },
    {
      "name": "simplix.cache.redis.command-timeout",
      "type": "java.lang.Long",
      "description": "Redis command execution timeout in milliseconds",
      "defaultValue": 2000,
      "deprecation": null,
      "deprecated": false
    },
    {
      "name": "simplix.cache.redis.enable-statistics",
      "type": "java.lang.Boolean",
      "description": "Enable Redis cache statistics collection",
      "defaultValue": true,
      "deprecation": null,
      "deprecated": false
    },
    {
      "name": "simplix.cache.hazelcast.instance-name",
      "type": "java.lang.String",
      "description": "Name of the Hazelcast instance",
      "defaultValue": "simplix-cache",
      "deprecation": null,
      "deprecated": false
    },
    {
      "name": "simplix.cache.hazelcast.enable-statistics",
      "type": "java.lang.Boolean",
      "description": "Enable Hazelcast cache statistics",
      "defaultValue": true,
      "deprecation": null,
      "deprecated": false
    },
    {
      "name": "simplix.cache.hazelcast.backup-count",
      "type": "java.lang.Integer",
      "description": "Number of synchronous backups for Hazelcast",
      "defaultValue": 1,
      "deprecation": null,
      "deprecated": false
    },
    {
      "name": "simplix.cache.hazelcast.read-backup-data",
      "type": "java.lang.Boolean",
      "description": "Whether to read from Hazelcast backup data",
      "defaultValue": true,
      "deprecation": null,
      "deprecated": false
    }
  ],
  "hints": [
    {
      "name": "simplix.cache.mode",
      "values": [
        {
          "value": "local",
          "description": "Caffeine-based local in-memory cache. Best for single-instance deployments and development environments."
        },
        {
          "value": "redis",
          "description": "Redis-based distributed cache. Required for multi-instance deployments and production environments."
        },
        {
          "value": "hazelcast",
          "description": "Hazelcast embedded distributed cache. Alternative to Redis for multi-instance deployments (future support)."
        }
      ],
      "providers": [
        {
          "name": "any"
        }
      ]
    },
    {
      "name": "simplix.cache.cache-configs",
      "values": [
        {
          "value": "siteTimeZones",
          "description": "Cache for site timezone information"
        },
        {
          "value": "tenantTimeZones",
          "description": "Cache for tenant default timezone settings"
        },
        {
          "value": "tenantSettings",
          "description": "Cache for tenant configuration settings"
        },
        {
          "value": "userPermissions",
          "description": "Cache for user permission data"
        },
        {
          "value": "userSessions",
          "description": "Cache for active user sessions"
        },
        {
          "value": "applicationConfig",
          "description": "Cache for application configuration"
        },
        {
          "value": "featureFlags",
          "description": "Cache for feature flag states"
        }
      ]
    },
    {
      "name": "simplix.cache.default-ttl-seconds",
      "values": [
        {
          "value": "60",
          "description": "1 minute - for frequently changing data"
        },
        {
          "value": "300",
          "description": "5 minutes - for moderately dynamic data"
        },
        {
          "value": "900",
          "description": "15 minutes - for semi-static data"
        },
        {
          "value": "1800",
          "description": "30 minutes - for relatively stable data"
        },
        {
          "value": "3600",
          "description": "1 hour - default for most cached data"
        },
        {
          "value": "86400",
          "description": "24 hours - for static reference data"
        }
      ]
    },
    {
      "name": "simplix.cache.max-size",
      "values": [
        {
          "value": "100",
          "description": "Small cache for testing"
        },
        {
          "value": "1000",
          "description": "Medium cache for development"
        },
        {
          "value": "10000",
          "description": "Large cache for production"
        },
        {
          "value": "100000",
          "description": "Extra large cache for high-volume applications"
        }
      ]
    },
    {
      "name": "spring.data.redis.host",
      "providers": [
        {
          "name": "any"
        }
      ]
    },
    {
      "name": "spring.data.redis.port",
      "values": [
        {
          "value": "6379",
          "description": "Default Redis port"
        },
        {
          "value": "6380",
          "description": "Common alternative Redis port"
        }
      ]
    }
  ]
}